.header
  position fixed
  z-index 2
  top 0
  color: color-green
  width 100%
  height 120px
  padding 0 30px
  display flex
  align-items center
  justify-content space-between
  transition: top 0.15s;
  @media (max-width 1280px)
    height 90px
  &__logo
    background-image url("images/MasterDynamix_Logo.svg")
    background-position left center
    background-repeat no-repeat
    background-size contain
    display block
    height 81px
    width 161px
    @media (max-width 1280px)
      height 65px
      width 129px
  &__menu
    display flex
    list-style-type none
  &__item
    @extend a;
    color:  #0d0d0d
    font-weight 600
    font-size 1.3em
    display block
    line-height 30px
    height 36px
    margin 0 0 0 30px
    &.not-active
      pointer-events none
      cursor default
      text-decoration none
      color rgba(1,1,1, 0.4)
    &.link-effect
      &:before
        height 2px
        background-color #0d0d0d
