.signup-form {
	margin-top 35px

	label {
		line-height 100%
		margin-bottom 5px
		font-size 1em
	}
	textarea {
		width 100%
		min-width 100%
		max-width 100%
		min-height 100px
	}
	input,
	textarea {
		background-color transparent
		width 100%
		height 40px
		margin-bottom 20px
		padding 10px
		border 1px solid rgba(254, 254, 254, .3)
		color #fff
		font-size 1em
		@extend .animate

		&:hover,
		&:focus {
			border-color #fff
		}
	}
	.btn {
		font-family futura-bold
		display block
		padding 1.5em 4.5em
		border 0
		text-align center
		cursor pointer
		font-size 0.8em
		letter-spacing 1.1px
		@extend .animate

		span {
			font-weight 600
			font-size 1em
			text-transform uppercase
			@extend .animate
		}

		&:not(.btn-outline) {
			background-color #fff

			span {
				color #666
			}

			&:hover {
				background-color #f7f7f7
			}
		}

		&.btn-outline {
			background-color transparent
			border 1px solid #fff

			span {
				color #fff
			}

			&:hover {
				background-color #fff

				span {
					color color-green
				}
			}
		}
	}
	&.dark {
		input,
		textarea {
			border 1px solid rgba(1, 1, 1, .3)
			color #333
		}
		.btn-outline {
			border-color #333
			span {
				color #333
			}
			&:hover {
				border-color color-green

				span {
					color color-green
				}
			}
		}
}

}